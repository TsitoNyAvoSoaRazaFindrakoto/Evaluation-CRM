@{
    ViewData["Title"] = "Connexion";
    Layout = "_LayoutLogin";
}

<div class="login-container d-flex justify-content-center align-items-center min-vh-100">
    <div class="login-wrapper col-12 col-md-8 col-lg-5">
        <div class="card shadow-lg border-0 rounded-4">
            <div class="card-body p-5">
                <div class="text-center mb-4">
                    <div class="logo-circle mb-4 animate__animated animate__fadeInDown">
                        <i class="bi bi-shield-lock fs-1"></i>
                    </div>
                    <h2 class="fw-bold mb-3 text-primary animate__animated animate__fadeIn">Bienvenue</h2>
                    <p class="text-muted animate__animated animate__fadeIn animate__delay-1s">Connectez-vous pour accéder à votre espace</p>
                </div>
                <form asp-controller="Login" asp-action="Login" method="post" class="login-form animate__animated animate__fadeInUp animate__delay-1s">
                    <div class="form-floating mb-4">
                        <div class="input-group input-group-lg">
                            <span class="input-group-text bg-light border-end-0">
                                <i class="bi bi-envelope-fill text-primary"></i>
                            </span>
                            <input type="email" class="form-control form-control-lg border-start-0 ps-0" 
                                id="email" name="email" placeholder="Votre adresse email" required>
                        </div>
                    </div>
                    <div class="form-floating mb-4">
                        <div class="input-group input-group-lg">
                            <span class="input-group-text bg-light border-end-0">
                                <i class="bi bi-key-fill text-primary"></i>
                            </span>
                            <input type="password" class="form-control form-control-lg border-start-0 ps-0" 
                                id="password" name="password" placeholder="Votre mot de passe" required>
                        </div>
                    </div>
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary btn-lg rounded-pill fw-bold login-btn">
                            <span class="d-flex align-items-center justify-content-center">
                                <i class="bi bi-box-arrow-in-right me-2"></i>
                                <span>Se connecter</span>
                            </span>
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css">
    <style>
        .login-wrapper {
            opacity: 0;
            animation: fadeIn 0.5s ease-in forwards;
        }

        .logo-circle {
            width: 90px;
            height: 90px;
            background: linear-gradient(135deg, rgba(13, 110, 253, 0.15), rgba(13, 110, 253, 0.05));
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto;
            color: #0d6efd;
            transition: all 0.3s ease;
        }

        .logo-circle:hover {
            transform: scale(1.05);
            background: linear-gradient(135deg, rgba(13, 110, 253, 0.2), rgba(13, 110, 253, 0.1));
        }

        .input-group {
            transition: all 0.3s ease;
        }

        .input-group:focus-within {
            transform: translateY(-2px);
        }

        .input-group-text {
            border-radius: 1rem 0 0 1rem;
            transition: all 0.3s ease;
            padding: 0.75rem 1.25rem;
        }

        .form-control {
            border-radius: 0 1rem 1rem 0;
            font-size: 1rem;
            padding: 0.75rem 1.25rem;
        }

        .form-control:focus {
            box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.1);
            border-color: #0d6efd;
        }

        .login-btn {
            transition: all 0.3s ease;
            height: 54px;
            font-size: 1.1rem;
            background: linear-gradient(135deg, #0d6efd, #0b5ed7);
            border: none;
        }

        .login-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(13, 110, 253, 0.3);
            background: linear-gradient(135deg, #0b5ed7, #0a58ca);
        }

        .login-btn:active {
            transform: translateY(0);
        }

        .card {
            backdrop-filter: blur(10px);
            background: rgba(255, 255, 255, 0.95);
            transition: all 0.3s ease;
        }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 30px rgba(0, 0, 0, 0.1);
        }

        .login-form {
            margin-top: 2rem;
        }

        .text-primary {
            background: linear-gradient(135deg, #0d6efd, #0b5ed7);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }
    </style>
}