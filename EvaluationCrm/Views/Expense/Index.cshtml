@model List<EvaluationCrm.Models.entity.Expense>
@{
    ViewData["Title"] = "Dépenses";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-4">Dépenses</h1>
        <button class="btn btn-primary">
            <i class="bi bi-plus-lg"></i> Nouvelle dépense
        </button>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                    <tr>
                        <th>ID</th>
                        <th>Description</th>
                        <th>Amount</th>
                        <th>Date</th>
                    </tr>
                    </thead>
                    <tbody>
                    @if (Model != null)
                    {
                        @foreach (var expense in Model)
                        {
                            <tr>
                                <td>@expense.ExpenseId</td>
                                <td>@expense.Description</td>
                                <td>@expense.Amount</td>
                                <td>@expense.DateExpense</td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="7" class="text-center py-4">
                                <i class="bi bi-cash text-muted fs-1 d-block"></i>
                                <p class="text-muted">Aucune dépense trouvée</p>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>